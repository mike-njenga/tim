  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "moduleResolution": "NodeNext",
    "strict": true,
    "esModuleInterop": true,

    "outDir": "dist",
    "rootDir": "src",

    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src"]
}
